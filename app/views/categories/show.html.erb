<h1>Category Details</h1>
 <div class="control-label col-sm-2">
  <%= "Category Name : " %>
</div>
<div class="col-sm-5">
  <%= @category.name %>
</div>
<div class="article-actions">
    <% if logged_in? && current_user.admin? %>
      <%= link_to "Edit this category", edit_category_path(@category), :class => 'btn btn-xs btn-primary'  %> 
      <%= link_to "Delete this category", category_path(@category), method: :delete, 
      data: {confirm: "Are you sure  you want to delete this category?"}, class: "btn btn-xs btn-danger" %>
    <% end %>
    <%= link_to "View all categories", categories_path, :class => 'btn btn-xs btn-success' %>
</div>