 <div><%= pluralize(obj.size, 'user') %> found.</div>
 <div align="center">
  <% obj.each do |user| %>
    <div class="row">
      <div class="col-xs-8 col-xs-offset-2">
        <div class="well well-lg">
          <div class="article-title">
            <%= link_to user.username, user_path(user) %>
          </div>
          <div class="article-title">
            <%= link_to user.email, user_path(user) %>
          </div>
          <div class="article-actions">
            <%= link_to "Edit this user", edit_user_path(user), :class => 'btn btn-xs btn-primary'  %> 
            <%= link_to "Delete this user", article_path(user), method: :delete, 
            data: {confirm: "Are you sure  you want to delete this user?"}, class: "btn btn-xs btn-danger" %>
          </div>
      </div>
    </div>
  </div>
<% end %>
</div>